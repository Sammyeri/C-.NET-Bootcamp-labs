@model ReturnMovieResponse


<form method="post" action="/Home/MovieNightResults">
    <div class="form-group">
        <label asp-for="Title1">Search first movie by Title:</label>
        <input asp-for="Title1" class="form-control" required />
        <span asp-validation-for="Title1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title2">Search second movie by Title:</label>
        <input asp-for="Title2" class="form-control" required />
        <span asp-validation-for="Title2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title3">Search third movie by Title:</label>
        <input asp-for="Title3" class="form-control" required />
        <span asp-validation-for="Title3" class="text-danger"></span>
    </div>
    <button type="submit">Submit</button>
</form>

@if (Model != null)
{

    foreach (Movie movie in Model.Movies)
    {
        <img src="@movie.Poster">
        <p>@movie.Title</p>
        <p>@movie.Year</p>
        <p>@movie.Rating</p>
        <p>@movie.Genre</p>
        <p>@movie.Plot</p>
    }
}