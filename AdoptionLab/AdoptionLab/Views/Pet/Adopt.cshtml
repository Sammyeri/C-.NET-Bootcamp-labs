@model Pet

<form method="post" action="/Pet/ProcessPetForm">
    <div class="form-group">
        <label asp-for="Name">Pet's Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age">Pet's Age</label>
        <input asp-for="Age" class="form-control" required />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Species">Pet's Species</label>
        <input asp-for="Species" class="form-control" required />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Breed">Pet's Breed</label>
        <input asp-for="Breed" class="form-control" required />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Pet's Description</label>
        <input asp-for="Description" class="form-control" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Pet's Picture</label>
        <input asp-for="Image" class="form-control" required />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit">Submit</button>
</form>